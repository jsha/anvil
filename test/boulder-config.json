{
  "syslog": {
    "network": "",
    "server": "",
    "tag": "boulder"
  },

  "amqp": {
    "server": "amqp://guest:guest@localhost:5672",
    "-uncomment_for_AMQPS-tls": {
      "cacertfile": "/etc/boulder/rabbitmq-cacert.pem",
      "certfile": "/etc/boulder/rabbitmq-cert.pem",
      "keyfile": "/etc/boulder/rabbitmq-key.pem"
    },
    "RA": {
      "client": "RA.client",
      "server": "RA.server"
    },
    "VA": {
      "client": "VA.client",
      "server": "VA.server"
    },
    "SA": {
      "client": "SA.client",
      "server": "SA.server"
    },
    "CA": {
      "client": "CA.client",
      "server": "CA.server"
    }
  },

  "statsd": {
      "server": "localhost:8125",
      "prefix": "Boulder"
  },

  "wfe": {
    "listenAddress": "127.0.0.1:4000",
    "certCacheDuration": "6h",
    "certNoCacheExpirationWindow": "96h",
    "indexCacheDuration": "24h",
    "issuerCacheDuration": "48h",
    "debugAddr": "localhost:8000"
  },

  "ca": {
    "serialPrefix": 255,
    "profile": "ee",
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder",
    "debugAddr": "localhost:8001",
    "testMode": true,
    "_comment": "This should only be present in testMode. In prod use an HSM.",
    "Key": {
      "File": "test/test-ca.key"
    },
    "expiry": "2160h",
    "lifespanOCSP": "96h",
    "maxNames": 1000,
    "cfssl": {
      "signing": {
        "profiles": {
          "ee": {
            "usages": [
              "digital signature",
              "key encipherment",
              "server auth",
              "client auth"
            ],
            "backdate": "1h",
            "is_ca": false,
            "issuer_urls": [
              "http://localhost:4000/acme/issuer-cert"
            ],
            "ocsp_url": "http://localhost:4002/ocsp",
            "crl_url": "http://example.com/crl",
            "policies": [],
            "expiry": "8760h",
            "CSRWhitelist": {
              "PublicKeyAlgorithm": true,
              "PublicKey": true,
              "SignatureAlgorithm": true
            },
            "UseSerialSeq": true
          }
        },
        "default": {
          "usages": [
            "digital signature"
          ],
          "expiry": "8760h"
        }
      }
    }
  },

  "monolith": {
    "debugAddr": "localhost:8008"
  },

  "ra": {
    "debugAddr": "localhost:8002"
  },

  "sa": {
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder",
    "debugAddr": "localhost:8003"
  },

  "va": {
    "userAgent": "boulder",
    "debugAddr": "localhost:8004"
  },

  "sql": {
    "SQLDebug": true,
    "CreateTables": true
  },

  "revoker": {
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder"
  },

  "ocspResponder": {
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder",
    "path": "/",
    "listenAddress": "localhost:4002",
    "debugAddr": "localhost:8005"
  },

  "ocspUpdater": {
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder",
    "minTimeToExpiry": "72h",
    "debugAddr": "localhost:8006"
  },

  "activityMonitor": {
    "debugAddr": "localhost:8007"
  },

  "mailer": {
    "server": "mail.example.com",
    "port": "25",
    "username": "cert-master@example.com",
    "password": "password",
    "dbDriver": "mysql",
    "dbConnect": "boulder@/boulder",
    "messageLimit": 0,
    "nagTimes": ["24h", "72h", "168h", "336h"],
    "emailTemplate": "test/example-expiration-template",
    "debugAddr": "localhost:8004"
  },

  "common": {
    "baseURL": "http://localhost:4000",
    "issuerCert": "test/test-ca.pem",
    "maxKeySize": 4096,
    "dnsResolver": "127.0.0.1:8053",
    "dnsTimeout": "10s"
  },

  "subscriberAgreementURL": "http://localhost:4001/terms/v1"
}
